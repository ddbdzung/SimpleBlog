<!-- page -->
<main class="mx-auto flex min-h-screen w-full items-center justify-center bg-gray-900 text-white">
  <!-- component -->
  <form action="/auth" method="POST">
  <section class="flex w-[30rem] flex-col space-y-10">
    <div class="text-center text-4xl font-medium">BLog</div>
      <div class="w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
        <input name="email" type="text" placeholder="Email"
          class="p-2 w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" required />
      </div>

      <div class="w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
        <input name="password" type="password" placeholder="Password"
          class="p-2 w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" required />
      </div>

      <button type="submit" class="transform bg-indigo-600 p-4 font-bold duration-300 hover:bg-indigo-400 rounded-full">
        SIGN IN
      </button>
    <%- include ('./alerts') %>
    <!-- <a
      href="#"
      class="transform text-center font-semibold text-gray-500 duration-300 hover:text-gray-300"
      >FORGOT PASSWORD?</a
    > -->

    <p class="text-center text-lg">
      No account?
      <a href="/auth/sign-up" class="font-medium text-indigo-500 underline-offset-4 hover:underline">Create One</a>
    </p>
  </section>
  </form>
</main>